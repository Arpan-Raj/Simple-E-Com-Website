<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit Item (<%= user.name %>)</h3>
                </div>
                <div class="container p-4">
                    <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm">
                                    <div class="mb-3">
                                        <!-- <label for="image" class="form-label">Select Image</label>
                                        <input type="file" class="form-control" name="image"> -->
                                        <img src="/<%= user.image %>" height="15    0px" class="img-thumbnail mt-1">
                                        <!-- <input type="hidden" name="old_image" value="<%= user.image %>"> -->
                                    </div>
                                </div>
                                <div class="col-sm">
                                    <div class="mb-3">
                                        <label for="name">Name: <%= user.name %></label>
                                    </div>
                                    <div class="mb-3">  
                                        <label for="price">Price: <%= user.price %></label>
                                    </div>
                                    <div class="input-group-text border-0 bg-light mb-3">
                                        <label for="QTY">QTY: </label>
                                        <input type="number" name="qty" class="mx-2 form-control form-control-lg" placeholder="<%= user.qty %>">
                                    </div>
                                    <div class="mb-3 d-grid">
                                        <input type="submit" name="submit" value="Update Item" class="btn btn-success btn-lg">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>