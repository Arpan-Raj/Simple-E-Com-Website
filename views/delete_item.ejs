<%- include('layout/header') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
            <strong><%= message.message %></strong>
            </div>
            <% } %>
            <div class="table-reponsive">
                <% if (homeuser != '') { %>
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>Image</th>
                                <th>Name</th>
                                <th>Price</th>
                              <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% homeuser.forEach((row,index) => { %>
                                <tr class="align-middle">
                                    <td><img src="<%= row.image %>" width="50" class="img.thumbnail"></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.price %></td>
                                    <td>
                                        <a href="/admin/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">Your cart is empty</h1>
                <% } %>
                 
                
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>